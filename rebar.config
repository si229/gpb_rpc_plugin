{erl_opts, [
    debug_info,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_unused_import,
    warnings_as_errors
]}.

{deps, [
    {gpb,{git,"https://github.com/tomas-abrahamsson/gpb.git",{tag,"4.21.5"}}},
    {rebar3_gpb_plugin,{git,"https://github.com/lrascao/rebar3_gpb_plugin.git",{tag,"2.23.6"}}}
]}.

{cover_enabled, true}.
{cover_print_enabled, true}.
{profiles, [
    {test, [
        {erl_opts, [export_all]},
        {deps, [meck]}
    ]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.
